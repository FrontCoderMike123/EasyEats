<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
<script src="/javascripts/myAngular.js"></script>
<script type="text/javascript">
  function isNumber(evt) {
    evt = (evt) ? evt : window.event;
    var charCode = (evt.which) ? evt.which : evt.keyCode;
    var moneyDiv = document.querySelector('#moneyOnly');
    var moneyOnly = document.querySelector('#moneyOnly p');
    if (charCode > 31 && (charCode < 48 || charCode > 57)) {
        moneyOnly.innerHTML = "<%= moneyOnly %>";
        moneyDiv.classList.add('opac');
        return false;
    }else{
      moneyOnly.innerHTML = "";
      moneyDiv.classList.remove('opac');
    }
    return true;
}
</script>
</head>
<body ng-app="budgetOptions">
    <header>
      <% include ../partials/headerWithSet %>
    </header>

    <div class="padding"><!--for bottom padding. keep footer down!-->

      <form
      ng-controller="optionCtrl"
      name="myForm"
      role="form"
      action="/budget"
      method="post"
      class="forms"
      id="budgetForm">
        
        <h1><%= budgetTitle %></h1>
        <h5 class="errMsgs" id="userWelcome"><%= info %></h5>
        <div id="moneyOnly"><p></p></div>
        <fieldset id="budgetInput">
          <label><%= budget %></label>
<input type="text"
name="budget"
placeholder="<%= placeholder %>"
onkeypress="return isNumber(event)"
maxlength="2"
required>
        </fieldset>
        <input id="budgetFinder" class="mainButton" type="submit" value="<%= find %>">

      </form>
      
    </div>

    <footer>
      <% include ../partials/footer %>
    </footer>

  </body>
</html>
