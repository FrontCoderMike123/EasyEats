<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
<script src="/javascripts/myAngular.js"></script>
</head>
<body ng-app="budgetOptions">
    <header>
      <% include ../partials/header %>
    </header>

    <div class="padding"><!--for bottom padding. keep footer down!-->

<form
action="/signUp"
method="post"
class="forms"
id="signUpForm"
ng-controller="optionCtrl">
      <h1><%= signUpTitle %></h1>
      <h5 class="errMsgs"><%= info %></h5>
      <h5 class="errMsgs"><%= message %></h5>
      <fieldset>
          <label><%= username %></label>
          <input type="text" name="username" required>
      </fieldset>
      <fieldset>
          <label><%= password %></label>
          <input type="password" name="password" required>
      </fieldset>
      <fieldset>
          <label><%= fname %></label>
          <input type="text" name="firstname" required>
      </fieldset>
      <fieldset>
          <label><%= lname %></label>
          <input type="text" name="lastname" required>
      </fieldset>
      <fieldset id="EMAIL">
          <label><%= email %></label>
          <input type="email" name="email" required>
      </fieldset>
      
      <div class="options">
        <div data-ng-click="isHidden=!isHidden">Set Favorites</div>
        
        <select id="favoriteSelector" multiple size="10" name="favorites">
          <option
          data-ng-repeat="type in types"
          data-ng-click="toggleFav(type)"
          class="type-{{type.Favorite}} slide"
          value="{{type.Cookie}}">{{type.Type}}</option>
        </select>
        
        <!--
        <div ng-init="isHidden=true">
          <ul>
          <li
          data-ng-click="toggleFav(type)"
          data-ng-repeat="type in types"
          class="type-{{type.Favorite}} slide"
          ng-hide="isHidden"
          name="favorites"
          value="{{type.Cookie}}">
          <p class="activeType">{{type.Type}}</p>
          </li>
          </ul>
        </div>
        -->
    

      <span id="proFavs" class="slide">{{profileSelected()}} Favorites Selected!</span>
      </div>
      <input id="SIGNUP" class="mainButton" type="submit" value="<%= signUp %>">
      <a class="neverMind" href="/">Never Mind</a>
</form>

    </div>

    <footer>
      <% include ../partials/footer %>
    </footer>

  </body>
</html>
