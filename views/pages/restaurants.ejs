          <div>
            <object data="images/icons/home.svg">
              <img src="images/icons/home.png" alt="Back to 'Food Finder'">
            </object>
          </div>
        </a>

      </section>
      
    </div>

    <footer>
      <% include ../partials/footer %>
    </footer>

