<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
<script src="/javascripts/myAngular.js"></script>
</head>
<body ng-app="budgetOptions">
    <header>
      <% include ../partials/header %>
    </header>

      <div class="padding">

<form class="forms" action="/updateProfile" method="post" id="updateProfileCon" ng-controller="optionCtrl">
          <h1><%= update %></h1>
          <fieldset>
            <label>First Name</label>
            <input type="text" name="firstname" placeholder="<%= firstname %>">
          </fieldset>
          <fieldset>
            <label>Last Name</label>
            <input type="text" name="lastname" placeholder="<%= lastname %>">
          </fieldset>
          <fieldset>
            <label>Username</label>
            <input type="text" name="username" placeholder="<%= username %>">
          </fieldset>
          <fieldset>
            <label>Email Address</label>
            <input type="text" name="email" placeholder="<%= emailAddress %>">
          </fieldset>
          <input type="button" class="mainButton confirm" ng-click="isHidden=!isHidden" value="Confirm">
          <div ng-init="isHidden=true">
            <input ng-hide="isHidden" type="submit" class="mainButton" value="Submit Changes">
          </div>
</form><!--update profile con-->

      </div>
      
    <footer>
      <% include ../partials/footer %>
    </footer>

  </body>
</html>
